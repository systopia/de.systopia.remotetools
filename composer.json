{
    "name": "systopia/de.systopia.remotetools",
    "description": "Toolbox to integrate CiviCRM with remote systems",
    "type": "civicrm-ext",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "SYSTOPIA GmbH",
            "email": "info@systopia.de",
            "homepage": "https://www.systopia.de"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "prepend-autoloader": false,
        "sort-packages": true,
        "platform": {
        }
    },
    "require": {
        "php": "^8.1",
        "civicrm/civicrm-core": ">=5.76",
        "civicrm/civicrm-packages": ">=5.76",
        "symfony/html-sanitizer": ">=6",
        "symfony/mime": ">=4.4",
        "systopia/de.systopia.identitytracker": "^1.5",
        "systopia/de.systopia.xcm": "^1.15",
        "systopia/expression-language-ext": "~0.1",
        "systopia/opis-json-schema-ext": "~0.6 >=0.6.2",
        "webmozart/assert": "^1.11 || ^2"
    },
    "autoload": {
      "classmap": ["ComposerHelper.php"]
    },
    "scripts": {
        "pre-update-cmd": [
            "Remotetools\\ComposerHelper::preUpdate"
        ],
        "composer-phpcs": [
            "@composer --working-dir=tools/phpcs"
        ],
        "composer-phpstan": [
            "@composer --working-dir=tools/phpstan"
        ],
        "composer-phpunit": [
            "@composer --working-dir=tools/phpunit"
        ],
        "composer-tools": [
            "@composer-phpcs",
            "@composer-phpstan",
            "@composer-phpunit"
        ],
        "phpcs": [
            "@php tools/phpcs/vendor/bin/phpcs"
        ],
        "phpcbf": [
            "@php tools/phpcs/vendor/bin/phpcbf"
        ],
        "phpstan": [
            "@php tools/phpstan/vendor/bin/phpstan -v"
        ],
        "phpunit": [
            "@php tools/phpunit/vendor/bin/simple-phpunit --coverage-text"
        ],
        "test": [
            "@phpcs",
            "@phpstan",
            "@phpunit"
        ]
    },
    "require-dev": {
        "psr/simple-cache": "^1 || ^2 || ^3",
        "symfony/event-dispatcher-contracts": "^1 || ^2 || ^3"
    },
    "conflict": {
        "pear/mail_mime": "<1.10.2"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    }
}
